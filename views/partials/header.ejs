<header id="stie-header" class="site-header">
  <div class="inner region">
    <div class="logo">
      <a href="/"><img src='/images/site_logo.png' /></a>
    </div>
    <div class="title">
      
      <!-- Load an icon library to show a hamburger menu (bars) on small screens -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="topnav" id="myTopnav">
  <a href="/" class="active menu-title"><%= title %></a>
  <a href="/category/ជាតិ">ព័ត៌មាន</a>
  <a href="#contact">ទំនាក់ទំង</a>
  <a href="#about">អំពី​យើង​ខ្ញុំ</a>
  <a href="javascript:void(0);" class="icon" onclick="myFunction()">
    <i class="fa fa-bars"></i>
  </a>
</div>

<script>
  /* Toggle between adding and removing the "responsive" class to topnav when the user clicks on the icon */
function myFunction() {
  var x = document.getElementById("myTopnav");
  if (x.className === "topnav") {
    x.className += " responsive";
  } else {
    x.className = "topnav";
  }
}
</script>
      
    </div><!--title-->
    
    <div class="log-out tooltip">
      <a href="/users/dashboard"><img src="/images/login.png" /></a>
      <span class="tooltiptext">ចូល​ទៅកាន់​​ទំព័រ​គ្រប់​គ្រង</span>
    </div>
  </div>
</header>